<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:background="@drawable/reveal_effect_header"
    android:paddingBottom="@dimen/spacing_small_8"
    android:paddingLeft="@dimen/spacing_normal_16"
    android:paddingRight="@dimen/spacing_normal_16"
    android:paddingTop="@dimen/size_small_24">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/spacing_large_60"
        android:layout_height="@dimen/spacing_large_60"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:layout_gravity="center"
        android:src="@drawable/avatar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/string_name"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_small_14"/>

        <TextView
            android:id="@+id/user_email_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/string_mail_info"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_small_14"/>
    </LinearLayout>
</RelativeLayout>