<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="appbar" parent="match_wrap">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="user_img">
        <item name="android:layout_width">@dimen/placeholder_photo_size_90</item>
        <item name="android:layout_height">@dimen/placeholder_photo_size_90</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/ic_add_a_photo_black_24dp</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="user_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/profile_img_height</item>
        -        <item name="android:fitsSystemWindows">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/user_profile</item>
    </style>

    <style name="infoBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">104dp</item>
        <item name="android:background">@color/color_gray</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/spacing_fab_28</item>
        <item name="android:paddingBottom">@dimen/spacing_fab_28</item>
    </style>

    <style name="infoBarEl">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/spacing_normal_16</item>
        <item name="android:paddingRight">@dimen/spacing_normal_16</item>
    </style>

    <style name="infoBarEl.side" parent="infoBarEl">
        <item name="android:layout_weight">0.25</item>
    </style>

    <style name="infoBarEl.central" parent="infoBarEl">
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="infoBarSep">
        <item name="android:layout_width">@dimen/size_separator_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_gray_light</item>
    </style>

    <style name="infoBarText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="infoBarText.description" parent="infoBarText">
        <item name="android:textSize">@dimen/font_medium_15</item>
    </style>

    <style name="infoBarText.value" parent="infoBarText">
        <item name="android:textSize">@dimen/font_large_18</item>
    </style>

    <style name="infoItemEl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
    </style>

    <style name="infoContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
    </style>

    <style name="infoEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">@color/color_gray</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="infoListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_separator_1</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
        <item name="android:background">@color/color_gray_light</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
    </style>

    <style name="icon.left">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="auth_edit_text_hint" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_gray_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="profile_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
    </style>
    <style name="profile_item_wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
    </style>

    <style name="profile_item_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">@color/color_gray</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="profile_item_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/color_gray</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
    </style>

    <style name="drawer_header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Toolbar -->
    <style name="ToolbarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/color_white</item>
        <item name="android:textColorSecondary">@color/color_white</item>
        <item name="android:actionMenuTextColor">@color/color_white</item>
    </style>
</resources>
